<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")" title="KartStats" class="links">
                    <img alt="KartStats Logo" style="width:220px" src="@Url.Content("~/Content/Images/logo.png")">
                </a>
            </div>
            <div class="navbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("Groepen", "Index", "Group", null, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:white;" })</li>
                    @if (Session["Id"] == null)
                    {
                        <li>@Html.ActionLink("Inloggen", "Login", "Account", null, new { @style = "color:white;" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Uitloggen", "Logout", "Account", null, new { @style = "color:white;" })</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KartStats</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
